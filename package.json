{
  "name": "kintone-plugin-starter",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "develop": "run-s build watch",
    "build": "run-s clean bundle pack upload",
    "watch": "run-p bundle:watch pack:watch upload:watch",
    "upload": "kintone-plugin-uploader dist/plugin.zip --waiting-dialog-ms 3000",
    "upload:watch": "kintone-plugin-uploader dist/plugin.zip --watch --waiting-dialog-ms 3000",
    "pack": "if [ -e private.ppk ]; then kintone-plugin-packer --ppk private.ppk --out dist/plugin.zip plugin; else kintone-plugin-packer --out dist/plugin.zip plugin && mv $(find dist -name '*.ppk' | head -1) private.ppk; fi ",
    "pack:watch": "if [ -e private.ppk ]; then kintone-plugin-packer --ppk private.ppk --out dist/plugin.zip plugin --watch; else kintone-plugin-packer --out dist/plugin.zip plugin && mv $(find dist -name '*.ppk' | head -1) private.ppk && kintone-plugin-packer --ppk private.ppk --out dist/plugin.zip plugin --watch; fi",
    "bundle": "webpack --mode production",
    "bundle:watch": "webpack --mode development --watch",
    "clean": "rm -rf dist && rm -f plugin/*bundle.js*",
    "format": "prettier --write src",
    "lint": "eslint --fix src",
    "fix": "run-s format lint",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@kintone/plugin-packer": "^5.0.5",
    "@kintone/plugin-uploader": "^5.0.2",
    "babel-loader": "^8.2.2",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "terser-webpack-plugin": "^5.1.3",
    "webpack": "^5.39.1",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "core-js": "^3.15.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
